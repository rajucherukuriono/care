<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>50.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>Case Deflection</masterLabel>
    <targets>
        <target>lightningCommunity__Page</target>
        <target>lightningCommunity__Default</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightningCommunity__Default">
            <property label="Record ID" name="recordId" type="String" default="{!recordId}"/>
            <property label="Prompt" name="prompt" type="String" default="Did you get the help you needed?"/>
            <property label="Yes Label" name="yesLabel" type="String" default="Yes"/>
            <property label="No Label" name="noLabel" type="String" default="No"/>
            <property label="Yes Response" name="yesResponse" type="String" default="Great! Thanks for letting us know."/>
            <property label="Top Articles Header" name="articlesHeader" type="String" default="These articles might help"/>
            <property label="Number of Articles" name="numArticles" type="Integer" default="5"/>
            <property label="More Help Heading" name="moreHelpHeading" type="String" default="Still need more help?"/>
            <property label="More Help Prompt" name="moreHelpPrompt" type="String" default="Select &lt;strong&gt;Contact Us&lt;/strong&gt; to connect with our Member Care team."/>
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>